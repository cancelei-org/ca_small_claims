<%= link_to product_feedback_path(product_feedback), class: "card bg-base-100 shadow hover:shadow-lg transition-shadow" do %>
  <div class="card-body">
    <div class="flex flex-wrap items-center gap-2 mb-2">
      <span class="badge <%= product_feedback.status_color %>"><%= product_feedback.status_display_name %></span>
      <span class="badge badge-outline">
        <%= render_category_icon(product_feedback.category) %>
        <%= product_feedback.category_display_name %>
      </span>
    </div>

    <h3 class="card-title text-lg">
      <%= product_feedback.title %>
    </h3>

    <p class="text-base-content/70 line-clamp-2">
      <%= truncate(product_feedback.description, length: 150) %>
    </p>

    <div class="flex items-center justify-between mt-4 pt-4 border-t border-base-300">
      <div class="flex items-center gap-4 text-sm text-base-content/60">
        <% if local_assigns[:show_user] && show_user %>
          <span><%= product_feedback.user.display_name %></span>
        <% end %>
        <span><%= time_ago_in_words(product_feedback.created_at) %> ago</span>
      </div>

      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-base-content/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        </svg>
        <span class="font-medium"><%= product_feedback.votes_count %></span>
      </div>
    </div>
  </div>
<% end %>
