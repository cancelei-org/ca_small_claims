<% content_for :title, "California Small Claims Court Forms - Free Online Form Filler" %>

<%# Hero Section with Three Paths %>
<section class="hero py-8 lg:py-12 block">
  <div class="text-center mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold mb-4">
      California Small Claims Court Forms
    </h1>
    <p class="text-xl text-base-content/70 max-w-2xl mx-auto">
      Fill out your court forms online, for free. Generate print-ready PDFs.
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Path 1: Quick Form Picker %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
          </svg>
          Find a Form
        </h2>
        <p class="text-sm text-base-content/70 mb-4">Search or browse all available forms</p>

        <div data-controller="forms-picker" data-forms-picker-url-value="<%= forms_picker_home_path %>">
          <%# Search Input %>
          <div class="form-control mb-4">
            <input type="text"
                   placeholder="Search forms (e.g., SC-100)"
                   class="input input-bordered w-full min-h-[48px] text-base"
                   data-forms-picker-target="searchInput"
                   data-action="input->forms-picker#search">
          </div>

          <%# Category Pills %>
          <div class="flex flex-wrap gap-2 mb-4">
            <button class="btn btn-sm md:btn-xs btn-outline min-h-[44px] md:min-h-0" data-forms-picker-target="categoryButton" data-action="click->forms-picker#clearCategory">All</button>
            <button class="btn btn-sm md:btn-xs btn-outline min-h-[44px] md:min-h-0" data-forms-picker-target="categoryButton" data-category="filing" data-action="click->forms-picker#selectCategory">Filing</button>
            <button class="btn btn-sm md:btn-xs btn-outline min-h-[44px] md:min-h-0" data-forms-picker-target="categoryButton" data-category="service" data-action="click->forms-picker#selectCategory">Service</button>
            <button class="btn btn-sm md:btn-xs btn-outline min-h-[44px] md:min-h-0" data-forms-picker-target="categoryButton" data-category="judgment" data-action="click->forms-picker#selectCategory">Judgment</button>
          </div>

          <%# Results with Turbo Frame %>
          <div id="forms-picker-results">
            <%= render "home/forms_picker_results", forms: @all_forms %>
          </div>
        </div>

        <div class="card-actions justify-end mt-4">
          <%= link_to "Browse All Forms", forms_path, class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>

    <%# Path 2: Guided Workflows %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-secondary">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 010 3.75H5.625a1.875 1.875 0 010-3.75z" />
          </svg>
          Step-by-Step Guides
        </h2>
        <p class="text-sm text-base-content/70 mb-4">Not sure which forms you need? Follow our guided workflows.</p>

        <div class="space-y-3">
          <% @featured_workflows.each do |workflow| %>
            <%= link_to workflow_path(workflow), class: "block p-4 rounded-lg bg-base-200 hover:bg-base-300 transition-colors" do %>
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-semibold"><%= workflow.name %></h3>
                  <p class="text-sm text-base-content/60"><%= workflow.total_steps %> steps</p>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-base-content/40">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                </svg>
              </div>
            <% end %>
          <% end %>

          <% if @featured_workflows.empty? %>
            <div class="text-center py-4 text-base-content/60">
              <p>Workflows coming soon</p>
            </div>
          <% end %>
        </div>

        <div class="card-actions justify-end mt-4">
          <%= link_to "View All Workflows", workflows_path, class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
    </div>

    <%# Path 3: Account CTA %>
    <div class="card bg-gradient-to-br from-primary to-secondary text-primary-content shadow-xl">
      <div class="card-body">
        <h2 class="card-title gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Save Your Progress
        </h2>
        <p class="text-sm opacity-90 mb-4">Create a free account to save your forms and access them from any device.</p>

        <ul class="space-y-2 mb-6">
          <li class="flex items-center gap-2 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            Auto-save your progress
          </li>
          <li class="flex items-center gap-2 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            Access from any device
          </li>
          <li class="flex items-center gap-2 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            Auto-fill common fields
          </li>
        </ul>

        <% if user_signed_in? %>
          <div class="card-actions">
            <%= link_to "My Forms", submissions_path, class: "btn btn-outline border-primary-content text-primary-content hover:bg-primary-content hover:text-primary w-full" %>
          </div>
        <% else %>
          <div class="card-actions">
            <%= link_to "Create Free Account", new_user_registration_path, class: "btn bg-base-100 text-primary hover:bg-base-200 w-full" %>
            <p class="text-xs opacity-80 text-center w-full mt-2">
              Already have an account? <%= link_to "Sign in", new_user_session_path, class: "underline" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<%# Quick Actions - Filing vs Being Sued %>
<section class="py-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="card bg-base-100 shadow border-l-4 border-primary">
      <div class="card-body">
        <h2 class="card-title">Filing a Claim?</h2>
        <p class="text-base-content/70">Start with the Plaintiff's Claim form (SC-100) to sue someone in small claims court.</p>
        <div class="card-actions justify-end">
          <%= link_to "Start Your Claim", form_path("SC-100"), class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow border-l-4 border-secondary">
      <div class="card-body">
        <h2 class="card-title">Being Sued?</h2>
        <p class="text-base-content/70">Use the Defendant's Claim form (SC-120) to file a counter-claim against the plaintiff.</p>
        <div class="card-actions justify-end">
          <%= link_to "File Counter-Claim", form_path("SC-120"), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</section>

<%# How It Works %>
<section class="py-8">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="text-2xl font-bold text-center mb-8">How It Works</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="avatar placeholder mb-4">
            <div class="bg-primary text-primary-content rounded-full w-12 flex items-center justify-center">
              <span class="text-xl font-bold">1</span>
            </div>
          </div>
          <h3 class="font-semibold mb-2">Choose Your Form</h3>
          <p class="text-base-content/70 text-sm">Select from over 1,400 official California court forms.</p>
        </div>

        <div class="text-center">
          <div class="avatar placeholder mb-4">
            <div class="bg-primary text-primary-content rounded-full w-12 flex items-center justify-center">
              <span class="text-xl font-bold">2</span>
            </div>
          </div>
          <h3 class="font-semibold mb-2">Fill It Out Online</h3>
          <p class="text-base-content/70 text-sm">Complete the form in your browser. Your progress is automatically saved.</p>
        </div>

        <div class="text-center">
          <div class="avatar placeholder mb-4">
            <div class="bg-primary text-primary-content rounded-full w-12 flex items-center justify-center">
              <span class="text-xl font-bold">3</span>
            </div>
          </div>
          <h3 class="font-semibold mb-2">Download & Print</h3>
          <p class="text-base-content/70 text-sm">Generate a PDF that matches the official court form, ready to file.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<%# Browse by Category %>
<section class="py-8">
  <h2 class="text-2xl font-bold mb-6">Browse by Category</h2>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% @categories.each do |category| %>
      <%= link_to forms_path(category: category.slug), class: "card bg-base-100 shadow hover:shadow-lg transition-shadow" do %>
        <div class="card-body items-center text-center p-4">
          <span class="font-medium"><%= category.name %></span>
        </div>
      <% end %>
    <% end %>
  </div>
</section>

<%# Disclaimer %>
<section class="py-8">
  <div class="alert alert-warning">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <div>
      <h3 class="font-bold">Important Disclaimer</h3>
      <p class="text-sm">
        This tool helps you fill out court forms but does not provide legal advice.
        For legal questions about your case, consult with an attorney or visit the
        <a href="https://selfhelp.courts.ca.gov/small-claims" target="_blank" class="link">California Courts Self-Help Center</a>.
      </p>
    </div>
  </div>
</section>
