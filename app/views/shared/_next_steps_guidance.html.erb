<%# What Happens Next? Guidance Component %>
<div class="next-steps-guidance card bg-base-100 shadow-xl"
     data-controller="next-steps"
     data-next-steps-form-code-value="<%= form_definition.code %>">
  <div class="card-body">
    <%# Header %>
    <div class="flex flex-col sm:flex-row items-start justify-between gap-4 mb-6">
      <div class="flex items-start gap-4">
        <div class="p-3 rounded-full bg-success/10 text-success shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <h2 class="card-title text-xl"><%= guidance[:title] %></h2>
          <p class="text-base-content/70"><%= guidance[:intro] %></p>
        </div>
      </div>
      <div class="badge badge-lg badge-neutral gap-2 whitespace-nowrap" data-next-steps-counter>
        0/<%= guidance[:steps].size %> completed
      </div>
    </div>

    <%# Steps Checklist %>
    <% if guidance[:steps].any? %>
      <div class="space-y-3 mb-8">
        <% guidance[:steps].each_with_index do |step, index| %>
          <div class="next-step-item flex items-start gap-4 p-4 rounded-xl cursor-pointer transition-all border-2 border-transparent hover:border-primary/20 <%= step[:important] ? 'bg-warning/5 !border-warning/20' : 'bg-base-200' %>"
               data-next-steps-target="step"
               data-step-id="<%= step[:id] %>"
               data-action="click->next-steps#toggleStep"
               role="button"
               tabindex="0">
            <%# Checkbox Replacement %>
            <div class="step-checkbox flex items-center justify-center w-6 h-6 rounded-md border-2 border-base-content/20 shrink-0 mt-1 transition-colors">
              <svg class="w-4 h-4 text-primary-content scale-0 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>

            <%# Step Content %>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2">
                <h3 class="font-bold text-base-content"><%= step[:title] %></h3>
                <% if step[:important] %>
                  <span class="badge badge-warning badge-sm font-bold">Important</span>
                <% end %>
              </div>
              <p class="text-sm text-base-content/70 mt-1"><%= step[:description] %></p>

              <% if step[:link].present? %>
                <a href="<%= step[:link]["url"] %>"
                   target="_blank"
                   rel="noopener"
                   class="inline-flex items-center gap-1 text-sm text-primary hover:underline mt-2 font-medium"
                   data-action="click->stop-propagation#stop">
                  <%= step[:link]["text"] %>
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              <% end %>
            </div>

            <%# Step Icon %>
            <div class="text-base-content/20 shrink-0 hidden sm:block">
              <%= next_step_icon(step[:icon], class: "w-8 h-8") %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <%# Interactive Tools Grid %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <%# Courthouse Lookup %>
      <div class="card bg-base-200 border border-base-300" 
           data-controller="courthouse-lookup"
           data-courthouse-lookup-data="<%= Utilities::CourthouseService.all_courthouses.to_json %>">
        <div class="card-body p-6">
          <h3 class="card-title text-sm uppercase tracking-wider text-base-content/60 mb-2">
            Find Your Courthouse
          </h3>
          <div class="form-control w-full">
            <select class="select select-bordered w-full" 
                    data-courthouse-lookup-target="select"
                    data-action="change->courthouse-lookup#update">
              <option value="">Select your county...</option>
              <% Utilities::CourthouseService.counties.each do |county| %>
                <option value="<%= county %>"><%= county %></option>
              <% end %>
            </select>
          </div>
          
          <div class="mt-4 p-3 bg-base-100 rounded-lg hidden" data-courthouse-lookup-target="info">
            <p class="font-bold text-sm" data-courthouse-lookup-target="name"></p>
            <p class="text-xs text-base-content/70 mt-1" data-courthouse-lookup-target="address"></p>
            <p class="text-xs font-medium text-primary mt-2" data-courthouse-lookup-target="phone"></p>
            <a href="#" target="_blank" class="btn btn-xs btn-outline btn-primary mt-3" data-courthouse-lookup-target="link">
              Visit Website
            </a>
          </div>
        </div>
      </div>

      <%# Deadline Calculator Quick Access %>
      <div class="card bg-base-200 border border-base-300" data-controller="deadline-calculator">
        <div class="card-body p-6">
          <h3 class="card-title text-sm uppercase tracking-wider text-base-content/60 mb-2">
            Service Deadline
          </h3>
          <div class="space-y-3">
            <input type="date" class="input input-bordered input-sm w-full" 
                   data-deadline-calculator-target="hearingDate"
                   data-action="change->deadline-calculator#update">
            <select class="select select-bordered select-sm w-full"
                    data-deadline-calculator-target="serviceType"
                    data-action="change->deadline-calculator#update">
              <option value="15">In-county service (15d)</option>
              <option value="20">Out-of-county (20d)</option>
            </select>
          </div>
          <div class="mt-3 text-center">
            <p class="text-xs text-base-content/60">Last day to serve:</p>
            <p class="font-bold text-primary" data-deadline-calculator-target="resultDate">Select date</p>
          </div>
        </div>
      </div>
    </div>

    <%# Resources %>
    <div class="border-t border-base-300 pt-6">
      <h3 class="font-bold text-base-content mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Legal Help Resources
      </h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <a href="https://selfhelp.courts.ca.gov/small-claims" target="_blank" 
           class="flex items-center justify-between p-4 rounded-xl bg-info/10 text-info hover:bg-info/20 transition-colors">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <span class="font-bold text-sm">CA Courts Self-Help</span>
          </div>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
        <a href="https://selfhelp.courts.ca.gov/small-claims/advisor" target="_blank" 
           class="flex items-center justify-between p-4 rounded-xl bg-primary/10 text-primary hover:bg-primary/20 transition-colors">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
            </svg>
            <span class="font-bold text-sm">Small Claims Advisor</span>
          </div>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
      </div>
    </div>

    <%# Related Forms %>
    <% if related_forms.any? %>
      <div class="mt-8">
        <h3 class="font-bold text-base-content mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Next Forms to Fill
        </h3>
        <div class="grid gap-3 sm:grid-cols-2">
          <% related_forms.each do |related| %>
            <%= link_to form_path(related[:form].code), class: "group flex items-center gap-4 p-4 rounded-xl bg-base-200 hover:bg-base-300 transition-all border-2 border-transparent hover:border-primary/20" do %>
              <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-primary text-primary-content font-bold shadow-sm group-hover:scale-110 transition-transform">
                <%= related[:form].code %>
              </div>
              <div class="min-w-0 flex-1">
                <p class="font-bold text-sm text-base-content truncate"><%= related[:form].title %></p>
                <p class="text-xs text-base-content/60"><%= related[:reason] %></p>
              </div>
              <svg class="w-5 h-5 text-base-content/20 group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Action Buttons %>
    <div class="card-actions justify-end mt-8 pt-6 border-t border-base-300">
      <%= link_to download_form_path(form_definition.code), class: "btn btn-success btn-lg gap-3 shadow-lg hover:shadow-xl transition-all" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
        </svg>
        Download Forms
      <% end %>
      <button type="button"
              class="btn btn-ghost btn-lg gap-3"
              onclick="window.print()">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
        </svg>
        Print
      </button>
    </div>
  </div>
</div>