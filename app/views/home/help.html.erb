<% content_for :title, "Help & FAQ - CA Small Claims Forms" %>

<div class="max-w-4xl mx-auto space-y-8" data-controller="faq-search">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Help & Frequently Asked Questions</h1>
      <p class="text-gray-600">Search answers, calculate deadlines, and watch quick tutorials.</p>
    </div>
    <div class="form-control w-full sm:w-72">
      <label class="label pb-1" for="faq-search-input">
        <span class="label-text text-sm text-base-content/70">Search FAQs</span>
      </label>
      <div class="input input-bordered flex items-center gap-2">
        <svg class="w-4 h-4 text-base-content/60" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 104.5 4.5a7.5 7.5 0 0012.15 12.15z"></path>
        </svg>
        <input type="search"
               id="faq-search-input"
               class="grow bg-transparent focus:outline-none"
               placeholder="Type a question..."
               aria-label="Search frequently asked questions"
               data-faq-search-target="input"
               data-action="input->faq-search#filter">
      </div>
    </div>
  </div>

  <div class="grid gap-4">
    <%= render "shared/faq_content", prefix: "help" %>
  </div>

  <div class="grid gap-6 md:grid-cols-2">
    <div class="card bg-base-100 shadow" data-controller="deadline-calculator">
      <div class="card-body">
        <h3 class="card-title">Deadline calculator</h3>
        <p class="text-base-content/70 mb-3">Pick your hearing date and service type to see the last day to serve.</p>
        <div class="space-y-3">
          <label class="form-control">
            <span class="label-text text-sm text-base-content/70">Hearing date</span>
            <input type="date"
                   class="input input-bordered"
                   data-deadline-calculator-target="hearingDate"
                   data-action="change->deadline-calculator#update">
          </label>

          <label class="form-control">
            <span class="label-text text-sm text-base-content/70">Service type</span>
            <select class="select select-bordered"
                    data-deadline-calculator-target="serviceType"
                    data-action="change->deadline-calculator#update">
              <option value="15">In-county personal service (15 days before)</option>
              <option value="20">Out-of-county personal service (20 days before)</option>
              <option value="25">Certified mail by clerk (25 days before)</option>
            </select>
          </label>
        </div>
        <div class="mt-4 p-4 rounded-lg bg-base-200">
          <p class="text-sm text-base-content/70">Last day to serve</p>
          <p class="text-2xl font-bold" data-deadline-calculator-target="resultDate">Select a hearing date</p>
          <p class="text-sm text-base-content/60" data-deadline-calculator-target="daysLabel"></p>
        </div>
      </div>
    </div>

    <section class="card bg-base-100 shadow" aria-labelledby="video-walkthroughs-heading">
      <div class="card-body space-y-4">
        <h3 id="video-walkthroughs-heading" class="card-title">Video walkthroughs</h3>
        <p class="text-base-content/70">Short tutorials for the most-used forms.</p>
        <div class="space-y-3" role="group" aria-label="Tutorial videos">
          <div class="aspect-video rounded-lg overflow-hidden shadow border border-base-200">
            <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                    title="Filling out SC-100"
                    class="w-full h-full"
                    allowfullscreen></iframe>
          </div>
          <div class="aspect-video rounded-lg overflow-hidden shadow border border-base-200">
            <iframe src="https://www.youtube.com/embed/9bZkp7q19f0"
                    title="Serving your forms"
                    class="w-full h-full"
                    allowfullscreen></iframe>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
