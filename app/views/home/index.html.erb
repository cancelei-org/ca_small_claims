<% content_for :title, "California Small Claims Court Forms - Free Online Form Filler" %>

<%# Hero Section with Three Paths %>
<section class="hero py-8 lg:py-12 block">
  <div class="text-center mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold mb-4">
      <%= t("home.title") %>
    </h1>
    <p class="text-xl text-base-content/70 max-w-2xl mx-auto">
      <%= t("home.subtitle") %>
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Path 1: Quick Form Picker %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
          </svg>
          <%= t("home.find_form.title") %>
        </h2>
        <p class="text-sm text-base-content/70 mb-4"><%= t("home.find_form.description") %></p>

        <div data-controller="forms-picker" data-forms-picker-url-value="<%= forms_picker_home_path %>">
          <%# Search Input %>
          <div class="form-control mb-4">
            <input type="text"
                   placeholder="<%= t("home.find_form.placeholder") %>"
                   aria-label="<%= t("home.find_form.title") %>"
                   class="input input-bordered w-full min-h-[48px] text-base"
                   data-forms-picker-target="searchInput"
                   data-action="input->forms-picker#search">
          </div>

          <%# Category Pills %>
          <div class="flex flex-wrap gap-2 mb-4">
            <button class="btn btn-sm md:btn-xs btn-outline min-h-[44px] md:min-h-0" data-forms-picker-target="categoryButton" data-action="click->forms-picker#clearCategory">All</button>
            <button class="btn btn-sm md:btn-xs btn-outline min-h-[44px] md:min-h-0" data-forms-picker-target="categoryButton" data-category="filing" data-action="click->forms-picker#selectCategory">Filing</button>
            <button class="btn btn-sm md:btn-xs btn-outline min-h-[44px] md:min-h-0" data-forms-picker-target="categoryButton" data-category="service" data-action="click->forms-picker#selectCategory">Service</button>
            <button class="btn btn-sm md:btn-xs btn-outline min-h-[44px] md:min-h-0" data-forms-picker-target="categoryButton" data-category="judgment" data-action="click->forms-picker#selectCategory">Judgment</button>
          </div>

          <%# Results with Turbo Frame %>
          <div id="forms-picker-results">
            <%= render "home/forms_picker_results", forms: @all_forms %>
          </div>
        </div>

        <div class="card-actions justify-end mt-4">
          <%= link_to t("home.find_form.browse_all"), forms_path, class: "btn btn-primary min-h-[44px]" %>
        </div>
      </div>
    </div>

    <%# Path 2: Guided Workflows %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-secondary">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 010 3.75H5.625a1.875 1.875 0 010-3.75z" />
          </svg>
          <%= t("home.guides.title") %>
        </h2>
        <p class="text-sm text-base-content/70 mb-4"><%= t("home.guides.description") %></p>

        <div class="space-y-3">
          <% @featured_workflows.each do |workflow| %>
            <%= link_to workflow_path(workflow), class: "block p-4 rounded-lg bg-base-200 hover:bg-base-300 transition-colors" do %>
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-semibold"><%= workflow.name %></h3>
                  <p class="text-sm text-base-content/60"><%= workflow.total_steps %> <%= t("workflows.steps") %></p>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-base-content/40">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                </svg>
              </div>
            <% end %>
          <% end %>

          <% if @featured_workflows.empty? %>
            <div class="text-center py-4 text-base-content/60">
              <p><%= t("home.workflows_coming_soon") %></p>
            </div>
          <% end %>
        </div>

        <div class="card-actions justify-end mt-4">
          <%= link_to t("home.guides.view_all"), workflows_path, class: "btn btn-secondary min-h-[44px]" %>
        </div>
      </div>
    </div>

    <%# Path 3: Account CTA %>
    <div class="card bg-gradient-to-br from-primary to-secondary text-primary-content shadow-xl">
      <div class="card-body">
        <h2 class="card-title gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <%= t("home.save_progress.title") %>
        </h2>
        <p class="text-sm opacity-90 mb-4"><%= t("home.save_progress.description") %></p>

        <ul class="space-y-2 mb-6">
          <li class="flex items-center gap-2 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <%= t("home.save_progress.feature_auto_save") %>
          </li>
          <li class="flex items-center gap-2 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <%= t("home.save_progress.feature_access") %>
          </li>
          <li class="flex items-center gap-2 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <%= t("home.save_progress.feature_autofill") %>
          </li>
        </ul>

        <% if user_signed_in? %>
          <div class="card-actions">
            <%= link_to t("navigation.my_forms"), submissions_path, class: "btn btn-outline border-primary-content text-primary-content hover:bg-primary-content hover:text-primary w-full min-h-[44px]" %>
          </div>
        <% else %>
          <div class="card-actions">
            <%= link_to t("home.save_progress.create_account"), new_user_registration_path, class: "btn bg-base-100 text-primary hover:bg-base-200 w-full min-h-[44px]" %>
            <p class="text-sm opacity-80 text-center w-full mt-2">
              <%= t("home.save_progress.already_have_account", link: link_to(t("navigation.sign_in"), new_user_session_path, class: "underline p-2")).html_safe %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<%# Form Finder CTA %>
<section class="py-8">
  <%= link_to form_finder_path, class: "block" do %>
    <div class="card bg-gradient-to-r from-primary to-secondary text-primary-content shadow-xl hover:shadow-2xl transition-shadow">
      <div class="card-body flex-row items-center justify-between">
        <div class="flex items-center gap-4">
          <div class="p-3 rounded-full bg-primary-content/20">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
            </svg>
          </div>
          <div>
            <h2 class="text-xl font-bold"><%= t("home.form_finder.title") %></h2>
            <p class="opacity-90"><%= t("home.form_finder.description") %></p>
          </div>
        </div>
        <div class="hidden md:block">
          <span class="btn btn-ghost btn-lg text-primary-content border-primary-content/30 hover:bg-primary-content/20">
            <%= t("buttons.find_forms") %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
            </svg>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</section>

<%# Quick Actions - Filing vs Being Sued %>
<section class="py-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="card bg-base-100 shadow border-l-4 border-primary">
      <div class="card-body">
        <h2 class="card-title"><%= t("home.filing_claim.title") %></h2>
        <p class="text-base-content/70"><%= t("home.filing_claim.desc") %></p>
        <div class="card-actions justify-end">
          <%= link_to t("home.filing_claim.button"), form_path("SC-100"), class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow border-l-4 border-secondary">
      <div class="card-body">
        <h2 class="card-title"><%= t("home.being_sued.title") %></h2>
        <p class="text-base-content/70"><%= t("home.being_sued.desc") %></p>
        <div class="card-actions justify-end">
          <%= link_to t("home.being_sued.button"), form_path("SC-120"), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</section>

