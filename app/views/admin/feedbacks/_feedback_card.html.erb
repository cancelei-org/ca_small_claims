<div class="flex items-start gap-3 p-3 rounded-lg bg-base-200/50 hover:bg-base-200 transition-colors">
  <div class="flex-1 min-w-0">
    <div class="flex items-center gap-2 mb-1">
      <span class="font-medium text-sm"><%= feedback.form_definition.code %></span>
      <% case feedback.status %>
      <% when "pending" %>
        <span class="badge badge-warning badge-xs">Pending</span>
      <% when "acknowledged" %>
        <span class="badge badge-info badge-xs">Acknowledged</span>
      <% when "resolved" %>
        <span class="badge badge-success badge-xs">Resolved</span>
      <% end %>
    </div>

    <div class="flex items-center gap-1 mb-1">
      <% feedback.rating.times do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-3 h-3 text-warning">
          <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
        </svg>
      <% end %>
      <span class="text-xs text-base-content/60 ml-1"><%= time_ago_in_words(feedback.created_at) %> ago</span>
    </div>

    <% if feedback.comment.present? %>
      <p class="text-sm text-base-content/80 line-clamp-2"><%= feedback.comment %></p>
    <% else %>
      <div class="flex flex-wrap gap-1">
        <% feedback.issue_types.first(3).each do |type| %>
          <span class="badge badge-ghost badge-xs"><%= FormFeedback::ISSUE_TYPES[type]&.truncate(15) || type %></span>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to admin_feedback_path(feedback), class: "btn btn-ghost btn-xs btn-square flex-shrink-0" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
    </svg>
  <% end %>
</div>
