<%# Legal Terms Glossary - Rendered with legal_terms_glossary helper %>
<div class="legal-terms-glossary">
  <div class="grid gap-4 md:grid-cols-2">
    <% terms.each do |term| %>
      <div class="card bg-base-100 border border-base-300">
        <div class="card-body p-4">
          <h3 class="card-title text-lg text-primary">
            <%= term[:term] %>
          </h3>
          <% if term[:simple].present? %>
            <p class="text-sm font-medium text-base-content/80 -mt-1">
              <%= term[:simple] %>
            </p>
          <% end %>
          <p class="text-sm text-base-content/70">
            <%= term[:definition] %>
          </p>
          <% if term[:help_url].present? %>
            <div class="card-actions justify-end mt-2">
              <%= link_to term[:help_url], target: "_blank", rel: "noopener", class: "btn btn-xs btn-ghost text-primary gap-1" do %>
                Learn more
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
