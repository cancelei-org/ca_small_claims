<% content_for :title, "Submission ##{@submission.id} - Admin" %>

<div class="space-y-6">
  <div class="flex items-center gap-4">
    <%= link_to admin_submissions_path, class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to Submissions
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Main Content %>
    <div class="lg:col-span-2 space-y-6">
      <%# Form Info Header %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h2 class="card-title mb-1"><%= @submission.form_definition.code %></h2>
              <p class="text-base-content/70"><%= @submission.form_definition.title %></p>
            </div>
            <% case @submission.status %>
            <% when "draft" %>
              <span class="badge badge-warning badge-lg">Draft</span>
            <% when "completed" %>
              <span class="badge badge-info badge-lg">Completed</span>
            <% when "submitted" %>
              <span class="badge badge-success badge-lg">Submitted</span>
            <% end %>
          </div>

          <%# Completion Progress %>
          <div class="mb-4">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-base-content/70">Completion Progress</span>
              <span class="font-bold"><%= @submission.completion_percentage %>%</span>
            </div>
            <progress class="progress progress-primary w-full" value="<%= @submission.completion_percentage %>" max="100"></progress>
          </div>
        </div>
      </div>

      <%# Form Data Display %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="font-semibold mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
            </svg>
            Form Data (Read-Only)
          </h3>

          <% if @submission.form_data.present? && @submission.form_data.any? %>
            <div class="space-y-4">
              <% field_definitions = @submission.form_definition.field_definitions.index_by(&:name) %>
              <% @submission.form_data.each do |field_name, value| %>
                <% field_def = field_definitions[field_name] %>
                <div class="border-b border-base-200 pb-3 last:border-0">
                  <div class="flex flex-col sm:flex-row sm:items-start gap-1 sm:gap-4">
                    <div class="flex-shrink-0 sm:w-1/3">
                      <span class="text-sm font-medium text-base-content/70">
                        <%= field_def&.label || field_name.humanize %>
                      </span>
                      <% if field_def&.required? %>
                        <span class="text-error text-xs">*</span>
                      <% end %>
                    </div>
                    <div class="flex-1">
                      <% if value.present? %>
                        <% case field_def&.field_type %>
                        <% when "checkbox" %>
                          <% if value == true || value == "true" || value == "1" %>
                            <span class="badge badge-success gap-1">
                              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                              </svg>
                              Yes
                            </span>
                          <% else %>
                            <span class="badge badge-ghost gap-1">No</span>
                          <% end %>
                        <% when "date" %>
                          <span class="font-medium"><%= Date.parse(value.to_s).strftime("%B %d, %Y") rescue value %></span>
                        <% when "currency" %>
                          <span class="font-medium font-mono">$<%= number_with_delimiter(value) %></span>
                        <% when "tel" %>
                          <span class="font-medium font-mono"><%= value %></span>
                        <% when "email" %>
                          <span class="font-medium text-primary"><%= value %></span>
                        <% when "textarea" %>
                          <div class="bg-base-200 rounded-lg p-3 text-sm whitespace-pre-wrap"><%= value %></div>
                        <% else %>
                          <span class="font-medium"><%= value %></span>
                        <% end %>
                      <% else %>
                        <span class="text-base-content/40 italic">Not provided</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8 text-base-content/60">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto mb-2 opacity-50">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m6.75 12H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
              </svg>
              <p class="font-medium">No form data yet</p>
              <p class="text-sm">The user hasn't filled in any fields</p>
            </div>
          <% end %>
        </div>
      </div>

      <%# Raw JSON (Collapsible) %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <details class="collapse collapse-arrow">
            <summary class="collapse-title font-semibold px-0 min-h-0">
              <span class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />
                </svg>
                Raw JSON Data
              </span>
            </summary>
            <div class="collapse-content px-0">
              <pre class="bg-base-200 rounded-lg p-4 overflow-x-auto text-xs font-mono"><%= JSON.pretty_generate(@submission.form_data || {}) %></pre>
            </div>
          </details>
        </div>
      </div>
    </div>

    <%# Sidebar %>
    <div class="space-y-6">
      <%# User Info %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="font-semibold mb-4">User Information</h3>

          <% if @submission.user.present? %>
            <div class="flex items-center gap-3 mb-4">
              <div class="avatar placeholder">
                <div class="bg-primary text-primary-content rounded-full w-12">
                  <span><%= @submission.user.display_name.first(2).upcase %></span>
                </div>
              </div>
              <div>
                <div class="font-medium"><%= @submission.user.display_name %></div>
                <div class="text-sm opacity-60"><%= @submission.user.email %></div>
              </div>
            </div>

            <dl class="space-y-2 text-sm">
              <div class="flex justify-between">
                <dt class="text-base-content/70">User ID</dt>
                <dd class="font-mono"><%= @submission.user.id %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-base-content/70">Account Created</dt>
                <dd><%= @submission.user.created_at.strftime("%b %d, %Y") %></dd>
              </div>
            </dl>

            <div class="mt-4">
              <%= link_to admin_submissions_path(user_id: @submission.user.id), class: "btn btn-outline btn-sm w-full gap-2" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                </svg>
                View All User Submissions
              <% end %>
            </div>
          <% else %>
            <div class="alert">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
              </svg>
              <div>
                <div class="font-medium">Anonymous Session</div>
                <div class="text-sm opacity-70">Session ID: <%= @submission.session_id&.truncate(20) || "N/A" %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%# Metadata %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="font-semibold mb-4">Submission Details</h3>

          <dl class="space-y-3 text-sm">
            <div class="flex justify-between">
              <dt class="text-base-content/70">Submission ID</dt>
              <dd class="font-mono font-medium"><%= @submission.id %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-base-content/70">Status</dt>
              <dd>
                <% case @submission.status %>
                <% when "draft" %>
                  <span class="badge badge-warning badge-sm">Draft</span>
                <% when "completed" %>
                  <span class="badge badge-info badge-sm">Completed</span>
                <% when "submitted" %>
                  <span class="badge badge-success badge-sm">Submitted</span>
                <% end %>
              </dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-base-content/70">Created</dt>
              <dd><%= @submission.created_at.strftime("%b %d, %Y %l:%M %p") %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-base-content/70">Last Updated</dt>
              <dd><%= @submission.updated_at.strftime("%b %d, %Y %l:%M %p") %></dd>
            </div>
            <% if @submission.completed_at.present? %>
              <div class="flex justify-between">
                <dt class="text-base-content/70">Completed</dt>
                <dd><%= @submission.completed_at.strftime("%b %d, %Y %l:%M %p") %></dd>
              </div>
            <% end %>
            <% if @submission.pdf_generated_at.present? %>
              <div class="flex justify-between">
                <dt class="text-base-content/70">PDF Generated</dt>
                <dd><%= @submission.pdf_generated_at.strftime("%b %d, %Y %l:%M %p") %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>

      <%# Admin Notes %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="font-semibold mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
            </svg>
            Admin Notes
          </h3>

          <%= form_with url: update_notes_admin_submission_path(@submission), method: :patch, local: true, class: "space-y-3" do |f| %>
            <textarea
              name="admin_notes"
              class="textarea textarea-bordered w-full h-32"
              placeholder="Add internal notes about this submission..."
            ><%= @submission.admin_notes %></textarea>
            <button type="submit" class="btn btn-primary btn-sm w-full gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Save Notes
            </button>
          <% end %>
        </div>
      </div>

      <%# Workflow Info (if applicable) %>
      <% if @submission.workflow.present? %>
        <div class="card bg-base-100 shadow">
          <div class="card-body">
            <h3 class="font-semibold mb-4">Workflow Context</h3>

            <dl class="space-y-3 text-sm">
              <div class="flex justify-between">
                <dt class="text-base-content/70">Workflow</dt>
                <dd class="font-medium"><%= @submission.workflow.name %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-base-content/70">Session ID</dt>
                <dd class="font-mono text-xs"><%= @submission.workflow_session_id&.truncate(12) %></dd>
              </div>
            </dl>
          </div>
        </div>
      <% end %>

      <%# View Form Link %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <%= link_to form_path(@submission.form_definition), class: "btn btn-outline w-full gap-2", target: "_blank" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
            View Form Template
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
