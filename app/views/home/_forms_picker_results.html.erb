<div class="space-y-2 max-h-64 overflow-y-auto">
  <% if forms.any? %>
    <% forms.each do |form| %>
      <%= link_to form_path(form), class: "block p-3 rounded-lg hover:bg-base-200 transition-colors group" do %>
        <div class="flex items-center gap-3">
          <div class="avatar placeholder flex-shrink-0">
            <div class="bg-primary/10 text-primary rounded w-10 h-10">
              <span class="text-xs font-bold"><%= form.code.gsub(/[^0-9]/, "").first(3) %></span>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <div class="font-medium text-sm group-hover:text-primary transition-colors"><%= form.code %></div>
            <div class="text-xs text-base-content/60 truncate"><%= form.title %></div>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-base-content/30 group-hover:text-primary transition-colors flex-shrink-0">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="text-center py-6 text-base-content/60">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 mx-auto mb-2 opacity-50">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
      </svg>
      <p class="text-sm">No forms found</p>
      <p class="text-xs">Try a different search term</p>
    </div>
  <% end %>
</div>
