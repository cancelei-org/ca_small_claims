<% content_for :title, "Form Dependencies - #{@form_definition.code}" %>

<div class="mb-6 md:mb-8">
  <div class="breadcrumbs text-sm mb-4">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Forms", forms_path %></li>
      <li><%= link_to @form_definition.code, form_path(@form_definition) %></li>
      <li>Dependencies</li>
    </ul>
  </div>

  <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-base-content mb-2">
        <%= @form_definition.code %>: Form Flow
      </h1>
      <p class="text-sm md:text-base text-base-content/70 mb-3">
        <%= @form_definition.title %>
      </p>
      <div class="flex flex-wrap gap-2">
        <% if @flowchart[:current][:role] %>
          <span class="badge badge-<%= @flowchart[:current][:role] == 'plaintiff' ? 'primary' : 'secondary' %> badge-sm">
            <%= @flowchart[:current][:role].titleize %>
          </span>
        <% end %>
        <% if @flowchart[:current][:stage_info] %>
          <span class="badge badge-<%= @flowchart[:current][:stage_info][:color] %> badge-sm">
            Stage: <%= @flowchart[:current][:stage_info][:name] %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="flex gap-2">
      <%= link_to form_path(@form_definition), class: "btn btn-sm btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Fill Out Form
      <% end %>
      <%= link_to form_dependencies_timeline_path, class: "btn btn-sm btn-ghost" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        Full Timeline
      <% end %>
    </div>
  </div>
</div>

<%# Process Stage Timeline %>
<% if @flowchart[:stage_flow].present? %>
  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-4">Your Position in the Small Claims Process</h2>

    <div class="overflow-x-auto pb-2 -mx-4 px-4 md:mx-0 md:px-0" tabindex="0" role="region" aria-label="Process stages">
      <div class="flex gap-2 min-w-max md:min-w-0">
        <% @flowchart[:stage_flow].each_with_index do |stage, index| %>
          <div class="flex items-center flex-1 min-w-[140px]">
            <%# Stage Card %>
            <div class="flex-1">
              <div class="card <%= stage[:status] == 'current' ? 'bg-' + stage[:color] + ' text-' + stage[:color] + '-content' : 'bg-base-100' %> shadow-sm border-2 <%= stage[:status] == 'current' ? 'border-' + stage[:color] : 'border-base-300' %>">
                <div class="card-body p-3">
                  <%# Status indicator %>
                  <div class="flex items-center justify-between mb-1">
                    <span class="badge badge-xs <%= stage[:status] == 'completed' ? 'badge-success' : stage[:status] == 'current' ? 'badge-' + stage[:color] : 'badge-ghost' %>">
                      <%= stage[:order] %>
                    </span>
                    <% if stage[:status] == 'completed' %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    <% elsif stage[:status] == 'current' %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                    <% end %>
                  </div>

                  <h3 class="text-xs font-bold mb-1"><%= stage[:name] %></h3>
                  <p class="text-[10px] opacity-70 line-clamp-2"><%= stage[:description] %></p>
                </div>
              </div>
            </div>

            <%# Arrow between stages %>
            <% if index < @flowchart[:stage_flow].length - 1 %>
              <div class="px-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <p class="text-xs text-base-content/60 text-center md:hidden mt-2">
      Swipe to see all stages
    </p>
  </div>
<% end %>

<%# Form Dependency Graph %>
<div class="mb-8">
  <h2 class="text-lg font-semibold mb-4">Form Sequence & Dependencies</h2>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Previous Forms (Left) %>
    <div>
      <h3 class="text-sm font-semibold text-base-content/70 mb-3 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Previous Forms
      </h3>

      <% if @flowchart[:previous].present? %>
        <div class="space-y-2">
          <% @flowchart[:previous].each do |prev_form| %>
            <div class="card bg-base-100 shadow-sm hover:shadow-md transition-shadow">
              <div class="card-body p-4">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="font-bold text-sm"><%= prev_form[:code] %></h4>
                    <% if prev_form[:title].present? %>
                      <p class="text-xs text-base-content/60 mt-1"><%= prev_form[:title] %></p>
                    <% end %>
                    <% if prev_form[:reason].present? %>
                      <p class="text-xs text-info mt-2 italic">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <%= prev_form[:reason] %>
                      </p>
                    <% end %>
                  </div>
                  <% if prev_form[:exists] %>
                    <%= link_to form_path(prev_form[:code]), class: "btn btn-xs btn-ghost" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="card bg-base-200">
          <div class="card-body p-4 text-center">
            <p class="text-sm text-base-content/60">No prerequisite forms</p>
          </div>
        </div>
      <% end %>
    </div>

    <%# Current Form (Center) %>
    <div class="order-first lg:order-none">
      <h3 class="text-sm font-semibold text-base-content/70 mb-3 text-center flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Current Form
      </h3>

      <div class="card bg-primary text-primary-content shadow-lg">
        <div class="card-body p-6">
          <div class="text-center">
            <div class="badge badge-sm badge-accent mb-3">You are here</div>
            <h2 class="card-title text-2xl justify-center mb-2"><%= @flowchart[:current][:code] %></h2>
            <p class="text-sm opacity-90 mb-4"><%= @form_definition.title %></p>

            <% if @form_definition.description.present? %>
              <p class="text-xs opacity-75 mb-4"><%= @form_definition.description %></p>
            <% end %>

            <% if @form_definition.form_estimates.present? %>
              <div class="flex items-center justify-center gap-4 text-xs opacity-90">
                <% if @form_definition.estimated_minutes.present? %>
                  <span class="flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <%= @form_definition.estimated_minutes %> min
                  </span>
                <% end %>
                <% if @form_definition.difficulty_level.present? %>
                  <span class="badge badge-sm badge-accent">
                    <%= @form_definition.difficulty_level.to_s.titleize %>
                  </span>
                <% end %>
              </div>
            <% end %>

            <div class="card-actions justify-center mt-4">
              <%= link_to "Fill Out This Form", form_path(@form_definition), class: "btn btn-sm btn-accent" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%# Next Forms (Right) %>
    <div>
      <h3 class="text-sm font-semibold text-base-content/70 mb-3 flex items-center gap-2">
        Next Forms
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </h3>

      <% if @flowchart[:next].present? %>
        <div class="space-y-2">
          <% @flowchart[:next].each do |next_form| %>
            <div class="card bg-base-100 shadow-sm hover:shadow-md transition-shadow <%= 'border-2 border-warning' if next_form[:required] %>">
              <div class="card-body p-4">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-1">
                      <h4 class="font-bold text-sm"><%= next_form[:code] %></h4>
                      <% if next_form[:required] %>
                        <span class="badge badge-warning badge-xs">Required</span>
                      <% else %>
                        <span class="badge badge-ghost badge-xs">Optional</span>
                      <% end %>
                    </div>

                    <% if next_form[:title].present? %>
                      <p class="text-xs text-base-content/60 mt-1"><%= next_form[:title] %></p>
                    <% end %>

                    <% if next_form[:reason].present? %>
                      <p class="text-xs text-success mt-2 italic">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <%= next_form[:reason] %>
                      </p>
                    <% end %>
                  </div>

                  <% if next_form[:exists] %>
                    <%= link_to form_path(next_form[:code]), class: "btn btn-xs btn-ghost" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="card bg-base-200">
          <div class="card-body p-4 text-center">
            <p class="text-sm text-base-content/60">No follow-up forms required</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%# Form Kits Section %>
<% if @containing_kit.present? || @recommended_kits.any? %>
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold">Form Kits</h2>
      <%= link_to "Browse All Kits", form_dependencies_kits_path, class: "btn btn-sm btn-ghost" %>
    </div>

    <%# Kit containing this form %>
    <% if @containing_kit.present? %>
      <div class="alert alert-info mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="font-bold">This form is part of the "<%= @containing_kit[:name] %>" kit</h3>
          <div class="text-xs mt-1">
            <%= @containing_kit[:forms].map { |f| f[:code] }.join(", ") %>
            <span class="opacity-70 ml-2">â€¢ <%= @containing_kit[:estimated_time] %></span>
          </div>
        </div>
      </div>
    <% end %>

    <%# Recommended kits %>
    <% if @recommended_kits.any? %>
      <h3 class="text-sm font-semibold text-base-content/70 mb-3">Recommended Form Kits</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @recommended_kits.each do |kit| %>
          <div class="card bg-base-100 shadow hover:shadow-md transition-shadow">
            <div class="card-body p-4">
              <div class="flex items-start justify-between mb-2">
                <h4 class="card-title text-base"><%= kit[:name] %></h4>
                <span class="badge badge-<%= kit[:role] == 'plaintiff' ? 'primary' : kit[:role] == 'defendant' ? 'secondary' : 'accent' %> badge-sm">
                  <%= kit[:role].titleize %>
                </span>
              </div>

              <p class="text-xs text-base-content/60 mb-3"><%= kit[:description] %></p>

              <div class="text-xs text-base-content/60 mb-3">
                <span class="font-semibold"><%= kit[:forms].count %> forms:</span>
                <%= kit[:forms].map { |f| f[:code] }.join(", ") %>
              </div>

              <div class="flex items-center justify-between text-xs">
                <span class="flex items-center gap-1 text-base-content/70">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <%= kit[:estimated_time] %>
                </span>
                <%= link_to "View Kit Details", form_dependencies_kits_path(anchor: kit[:key]), class: "link link-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<%# Help Section %>
<div class="alert bg-base-200">
  <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
  </svg>
  <div class="flex-1">
    <h3 class="font-bold">Need help understanding the process?</h3>
    <div class="text-xs mt-1">
      View the <%= link_to "full timeline", form_dependencies_timeline_path, class: "link" %> to see all stages of the small claims process, or check our <%= link_to "help center", help_path, class: "link" %> for detailed guidance.
    </div>
  </div>
</div>
