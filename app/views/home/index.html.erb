      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="avatar placeholder mb-4">
            <div class="bg-primary text-primary-content rounded-full w-12 flex items-center justify-center">
              <span class="text-xl font-bold">1</span>
            </div>
          </div>
          <h3 class="font-semibold mb-2"><%= t("home.how_it_works.step1_title") %></h3>
          <p class="text-base-content/70 text-sm"><%= t("home.how_it_works.step1_desc") %></p>
        </div>

        <div class="text-center">
          <div class="avatar placeholder mb-4">
            <div class="bg-primary text-primary-content rounded-full w-12 flex items-center justify-center">
              <span class="text-xl font-bold">2</span>
            </div>
          </div>
          <h3 class="font-semibold mb-2"><%= t("home.how_it_works.step2_title") %></h3>
          <p class="text-base-content/70 text-sm"><%= t("home.how_it_works.step2_desc") %></p>
        </div>

        <div class="text-center">
          <div class="avatar placeholder mb-4">
            <div class="bg-primary text-primary-content rounded-full w-12 flex items-center justify-center">
              <span class="text-xl font-bold">3</span>
            </div>
          </div>
          <h3 class="font-semibold mb-2"><%= t("home.how_it_works.step3_title") %></h3>
          <p class="text-base-content/70 text-sm"><%= t("home.how_it_works.step3_desc") %></p>
        </div>
      </div>
    </div>
  </div>
</section>

<%# Browse by Category %>
<section class="py-8">
  <h2 class="text-2xl font-bold mb-6"><%= t("home.browse_by_category") %></h2>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% @categories.each do |category| %>
      <%= link_to forms_path(category: category.slug), class: "card bg-base-100 shadow hover:shadow-lg transition-shadow" do %>
        <div class="card-body items-center text-center p-4">
          <span class="font-medium"><%= category.name %></span>
        </div>
      <% end %>
    <% end %>
  </div>
</section>

<%# Disclaimer %>
<section class="py-8">
  <div class="alert alert-warning">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <div>
      <h3 class="font-bold"><%= t("home.disclaimer_title") %></h3>
      <p class="text-sm">
        <%= t("home.disclaimer_body", link: link_to(t("home.self_help_center"), "https://selfhelp.courts.ca.gov/small-claims", target: "_blank", class: "link")).html_safe %>
      </p>
    </div>
  </div>
</section>

