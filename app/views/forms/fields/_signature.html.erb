<%# Signature Field - Basic text field for typed signature %>
<% prefix ||= nil %>
<%= field_wrapper(field, prefix: prefix) do %>
  <div class="border-2 border-dashed border-base-300 rounded-lg p-4 bg-base-200 text-center">
    <div class="font-signature text-2xl mb-2 text-base-content/30 italic">
      <%= submission.field_value(field.name).presence || "Sign Here" %>
    </div>
    <%= form.text_field field.name,
      value: submission.field_value(field.name),
      required: field.required,
      placeholder: "Type your full name to sign",
      class: "#{standard_input_class} font-signature text-xl",
      id: [ prefix, field.name.parameterize, "input" ].compact.join("-"),
      data: field_data_attributes,
      **field_aria_attributes(field, prefix: prefix) %>
    <p class="text-[10px] uppercase tracking-widest text-base-content/40 mt-2">Digital Signature</p>
  </div>
<% end %>
