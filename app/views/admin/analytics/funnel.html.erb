<% content_for :title, "User Journey Funnel - Admin Analytics" %>

<div class="mb-6 md:mb-8">
  <div class="breadcrumbs text-sm mb-4">
    <ul>
      <li><%= link_to "Admin", admin_root_path %></li>
      <li><%= link_to "Analytics", admin_analytics_path %></li>
      <li>User Journey Funnel</li>
    </ul>
  </div>

  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-base-content mb-2">User Journey Funnel</h1>
      <p class="text-sm md:text-base text-base-content/70">
        Track conversion rates from form start to download
      </p>
    </div>

    <%= link_to admin_analytics_path, class: "btn btn-sm btn-ghost" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Dashboard
    <% end %>
  </div>
</div>

<%# Filters %>
<div class="card bg-base-100 shadow mb-6">
  <div class="card-body p-4">
    <%= form_with url: funnel_admin_analytics_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do %>
      <%# Period selector %>
      <div class="form-control">
        <label class="label"><span class="label-text text-xs">Period</span></label>
        <select name="period" class="select select-bordered select-sm">
          <option value="7d" <%= 'selected' if @period == '7d' %>>Last 7 Days</option>
          <option value="30d" <%= 'selected' if @period == '30d' %>>Last 30 Days</option>
          <option value="90d" <%= 'selected' if @period == '90d' %>>Last 90 Days</option>
        </select>
      </div>

      <%# Form selector %>
      <div class="form-control">
        <label class="label"><span class="label-text text-xs">Form</span></label>
        <select name="form_id" class="select select-bordered select-sm">
          <option value="">All Forms</option>
          <% @forms.each do |form| %>
            <option value="<%= form.id %>" <%= 'selected' if @form_definition_id.to_s == form.id.to_s %>>
              <%= form.code %> - <%= form.title.truncate(30) %>
            </option>
          <% end %>
        </select>
      </div>

      <%# User type filter %>
      <div class="form-control">
        <label class="label"><span class="label-text text-xs">User Type</span></label>
        <select name="user_type" class="select select-bordered select-sm">
          <option value="">All Users</option>
          <option value="registered" <%= 'selected' if @user_type == 'registered' %>>Registered</option>
          <option value="anonymous" <%= 'selected' if @user_type == 'anonymous' %>>Anonymous</option>
        </select>
      </div>

      <%# Submit button %>
      <div class="form-control">
        <label class="label"><span class="label-text text-xs opacity-0">.</span></label>
        <%= submit_tag "Apply Filters", class: "btn btn-sm btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%# Key Metrics %>
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
  <div class="stats shadow bg-base-100">
    <div class="stat p-4">
      <div class="stat-title text-xs">Overall Completion</div>
      <div class="stat-value text-2xl <%= @conversion_rates[:overall_completion] >= 50 ? 'text-success' : @conversion_rates[:overall_completion] >= 25 ? 'text-warning' : 'text-error' %>">
        <%= @conversion_rates[:overall_completion] %>%
      </div>
      <div class="stat-desc text-xs">Started → Completed</div>
    </div>
  </div>

  <div class="stats shadow bg-base-100">
    <div class="stat p-4">
      <div class="stat-title text-xs">Download Rate</div>
      <div class="stat-value text-2xl text-info"><%= @conversion_rates[:overall_download] %>%</div>
      <div class="stat-desc text-xs">Started → Downloaded</div>
    </div>
  </div>

  <div class="stats shadow bg-base-100">
    <div class="stat p-4">
      <div class="stat-title text-xs">Avg Time</div>
      <div class="stat-value text-2xl text-primary"><%= @avg_time %></div>
      <div class="stat-desc text-xs">minutes to complete</div>
    </div>
  </div>

  <div class="stats shadow bg-base-100">
    <div class="stat p-4">
      <div class="stat-title text-xs">Median Time</div>
      <div class="stat-value text-2xl text-secondary"><%= @median_time %></div>
      <div class="stat-desc text-xs">minutes to complete</div>
    </div>
  </div>
</div>

<%# Funnel Visualization %>
<div class="card bg-base-100 shadow mb-6">
  <div class="card-body">
    <h2 class="card-title mb-4">Conversion Funnel</h2>

    <div class="space-y-4">
      <% [
        { key: :started, label: "Started", color: "primary", icon_path: "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" },
        { key: :in_progress, label: "In Progress", color: "info", icon_path: "M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" },
        { key: :half_complete, label: "50% Complete", color: "warning", icon_path: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" },
        { key: :completed, label: "Completed", color: "success", icon_path: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" },
        { key: :downloaded, label: "Downloaded", color: "accent", icon_path: "M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" }
      ].each_with_index do |stage, index| %>
        <% count = @stages[stage[:key]] %>
        <% percentage = @stages[:started] > 0 ? ((count.to_f / @stages[:started]) * 100).round(1) : 0 %>
        <% width_percentage = @stages[:started] > 0 ? ((count.to_f / @stages[:started]) * 100).round : 100 %>

        <div class="relative">
          <%# Stage bar %>
          <div class="relative bg-<%= stage[:color] %>/20 rounded-lg overflow-hidden" style="height: 60px;">
            <div class="absolute inset-0 bg-<%= stage[:color] %> transition-all duration-500" style="width: <%= width_percentage %>%;"></div>

            <div class="relative z-10 flex items-center justify-between h-full px-4">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-<%= stage[:color] %> text-<%= stage[:color] %>-content flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= stage[:icon_path] %>" />
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-base-content"><%= stage[:label] %></div>
                  <div class="text-xs text-base-content/60"><%= percentage %>% of started</div>
                </div>
              </div>

              <div class="text-right">
                <div class="text-2xl font-bold text-base-content"><%= number_with_delimiter(count) %></div>
                <% if index > 0 %>
                  <% prev_count = @stages[[ :started, :in_progress, :half_complete, :completed, :downloaded ][index - 1]] %>
                  <% conversion = prev_count > 0 ? ((count.to_f / prev_count) * 100).round(1) : 0 %>
                  <div class="text-xs text-base-content/60"><%= conversion %>% converted</div>
                <% end %>
              </div>
            </div>
          </div>

          <%# Drop-off indicator (arrow between stages) %>
          <% if index < 4 %>
            <div class="flex items-center justify-center py-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <%# Drop-off Analysis %>
  <div class="card bg-base-100 shadow">
    <div class="card-body">
      <h2 class="card-title mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        Drop-off Points
      </h2>

      <% if @biggest_drop_off.present? %>
        <div class="alert alert-warning mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div>
            <strong>Biggest Drop-off:</strong> <%= @biggest_drop_off[:stage] %>
            <div class="text-sm mt-1"><%= @biggest_drop_off[:drop_off_rate].round(1) %>% drop-off rate (<%= number_with_delimiter(@biggest_drop_off[:count]) %> users)</div>
          </div>
        </div>
      <% end %>

      <div class="space-y-2">
        <% @drop_offs.each do |drop_off| %>
          <div>
            <div class="flex justify-between mb-1 text-sm">
              <span><%= drop_off[:stage] %></span>
              <span class="font-semibold <%= drop_off[:drop_off_rate] >= 50 ? 'text-error' : drop_off[:drop_off_rate] >= 25 ? 'text-warning' : 'text-base-content' %>">
                <%= drop_off[:drop_off_rate].round(1) %>%
              </span>
            </div>
            <progress class="progress <%= drop_off[:drop_off_rate] >= 50 ? 'progress-error' : drop_off[:drop_off_rate] >= 25 ? 'progress-warning' : 'progress-info' %> w-full"
                      value="<%= drop_off[:drop_off_rate] %>" max="100"></progress>
            <div class="text-xs text-base-content/60 mt-1"><%= number_with_delimiter(drop_off[:count]) %> users dropped off</div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# User Type Comparison (if available) %>
  <% if @user_type_comparison.present? %>
    <div class="card bg-base-100 shadow">
      <div class="card-body">
        <h2 class="card-title mb-4">Registered vs Anonymous</h2>

        <div class="space-y-4">
          <% [:started, :in_progress, :half_complete, :completed, :downloaded].each do |stage| %>
            <% reg_count = @user_type_comparison[:registered][stage] %>
            <% anon_count = @user_type_comparison[:anonymous][stage] %>
            <% total = reg_count + anon_count %>
            <% reg_percent = total > 0 ? ((reg_count.to_f / total) * 100).round : 0 %>

            <div>
              <div class="text-sm font-medium mb-1"><%= stage.to_s.titleize %></div>
              <div class="flex gap-2 items-center">
                <div class="flex-1 h-6 bg-base-200 rounded-full overflow-hidden flex">
                  <div class="bg-primary h-full transition-all" style="width: <%= reg_percent %>%;"
                       data-tooltip="Registered: <%= number_with_delimiter(reg_count) %>"></div>
                  <div class="bg-secondary h-full transition-all" style="width: <%= 100 - reg_percent %>%;"
                       data-tooltip="Anonymous: <%= number_with_delimiter(anon_count) %>"></div>
                </div>
                <div class="text-xs font-mono w-24 text-right">
                  <span class="text-primary"><%= reg_count %></span> / <span class="text-secondary"><%= anon_count %></span>
                </div>
              </div>
            </div>
          <% end %>

          <div class="flex gap-4 text-xs mt-4 justify-center">
            <span class="flex items-center gap-2">
              <span class="w-3 h-3 rounded bg-primary"></span> Registered
            </span>
            <span class="flex items-center gap-2">
              <span class="w-3 h-3 rounded bg-secondary"></span> Anonymous
            </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
