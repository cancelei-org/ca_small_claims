<% content_for :title, "Session ##{@session_submission.id} - Admin" %>

<div class="space-y-6">
  <div class="flex items-center gap-4">
    <%= link_to admin_session_submissions_path, class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to Sessions
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Main Content %>
    <div class="lg:col-span-2 space-y-6">
      <%# Form Info Header %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h2 class="card-title mb-1"><%= @session_submission.form_definition.code %></h2>
              <p class="text-base-content/70"><%= @session_submission.form_definition.title %></p>
            </div>
            <% if @session_submission.expired? %>
              <span class="badge badge-error badge-lg">Expired</span>
            <% else %>
              <span class="badge badge-success badge-lg">Active</span>
            <% end %>
          </div>

          <% if @session_submission.expired? %>
            <div class="alert alert-warning">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
              </svg>
              <div>
                <h3 class="font-bold">Session Expired</h3>
                <div class="text-sm">This session expired <%= time_ago_in_words(@session_submission.expires_at) %> ago. You can recover it to extend the expiration.</div>
              </div>
              <%= button_to recover_admin_session_submission_path(@session_submission), method: :patch, class: "btn btn-success btn-sm" do %>
                Recover Session
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <%# Form Data Display %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="font-semibold mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
            </svg>
            Form Data (Read-Only)
          </h3>

          <% if @session_submission.form_data.present? && @session_submission.form_data.any? %>
            <div class="space-y-4">
              <% field_definitions = @session_submission.form_definition.field_definitions.index_by(&:name) %>
              <% @session_submission.form_data.each do |field_name, value| %>
                <% field_def = field_definitions[field_name] %>
                <div class="border-b border-base-200 pb-3 last:border-0">
                  <div class="flex flex-col sm:flex-row sm:items-start gap-1 sm:gap-4">
                    <div class="flex-shrink-0 sm:w-1/3">
                      <span class="text-sm font-medium text-base-content/70">
                        <%= field_def&.label || field_name.humanize %>
                      </span>
                    </div>
                    <div class="flex-1">
                      <% if value.present? %>
                        <span class="font-medium"><%= value %></span>
                      <% else %>
                        <span class="text-base-content/40 italic">Not provided</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8 text-base-content/60">
              <p class="font-medium">No form data</p>
              <p class="text-sm">The user hasn't filled in any fields yet</p>
            </div>
          <% end %>
        </div>
      </div>

      <%# Raw JSON %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <details class="collapse collapse-arrow">
            <summary class="collapse-title font-semibold px-0 min-h-0">
              Raw JSON Data
            </summary>
            <div class="collapse-content px-0">
              <pre class="bg-base-200 rounded-lg p-4 overflow-x-auto text-xs font-mono"><%= JSON.pretty_generate(@session_submission.form_data || {}) %></pre>
            </div>
          </details>
        </div>
      </div>
    </div>

    <%# Sidebar %>
    <div class="space-y-6">
      <%# Session Info %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="font-semibold mb-4">Session Details</h3>

          <dl class="space-y-3 text-sm">
            <div class="flex justify-between">
              <dt class="text-base-content/70">Session ID</dt>
              <dd class="font-mono text-xs"><%= @session_submission.session_id.truncate(20) %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-base-content/70">Status</dt>
              <dd>
                <% if @session_submission.expired? %>
                  <span class="badge badge-error badge-sm">Expired</span>
                <% else %>
                  <span class="badge badge-success badge-sm">Active</span>
                <% end %>
              </dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-base-content/70">Created</dt>
              <dd><%= @session_submission.created_at.strftime("%b %d, %Y %l:%M %p") %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-base-content/70">Last Updated</dt>
              <dd><%= @session_submission.updated_at.strftime("%b %d, %Y %l:%M %p") %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-base-content/70">Expires</dt>
              <dd>
                <% if @session_submission.expired? %>
                  <span class="text-error"><%= @session_submission.expires_at.strftime("%b %d, %Y %l:%M %p") %></span>
                <% else %>
                  <%= @session_submission.expires_at.strftime("%b %d, %Y %l:%M %p") %>
                <% end %>
              </dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-base-content/70">Fields Filled</dt>
              <dd><%= @session_submission.form_data&.keys&.count || 0 %></dd>
            </div>
          </dl>
        </div>
      </div>

      <%# Actions %>
      <div class="card bg-base-100 shadow">
        <div class="card-body space-y-2">
          <h3 class="font-semibold mb-2">Actions</h3>

          <% if @session_submission.expired? %>
            <%= button_to recover_admin_session_submission_path(@session_submission), method: :patch, class: "btn btn-success w-full gap-2" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
              </svg>
              Recover Session (+72h)
            <% end %>
          <% end %>

          <%= button_to admin_session_submission_path(@session_submission), method: :delete, class: "btn btn-error btn-outline w-full gap-2", data: { confirm: "Permanently delete this session? This cannot be undone." } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
            </svg>
            Delete Session
          <% end %>
        </div>
      </div>

      <%# Form Link %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <%= link_to form_path(@session_submission.form_definition), class: "btn btn-outline w-full gap-2", target: "_blank" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
            View Form Template
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
