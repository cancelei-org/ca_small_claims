<% content_for :title, "Dashboard - Admin" %>

<h1 class="sr-only">Admin Dashboard</h1>

<div class="space-y-6">
  <%# Stats Cards - Swipeable on mobile, grid on desktop %>
  <div class="overflow-x-auto pb-2 -mx-4 px-4 md:mx-0 md:px-0 md:overflow-visible" tabindex="0" role="region" aria-label="Dashboard statistics">
    <div class="flex md:grid md:grid-cols-2 lg:grid-cols-4 gap-3 md:gap-4 min-w-max md:min-w-0">
      <%# Pending Feedbacks %>
      <div class="stat bg-base-100 rounded-box shadow flex-shrink-0 w-[160px] md:w-auto min-h-[120px]">
        <div class="stat-figure text-warning">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-title text-sm">Pending</div>
        <div class="stat-value text-warning text-2xl md:text-3xl"><%= @stats[:pending_feedbacks] %></div>
        <div class="stat-desc text-xs">Need attention</div>
      </div>

      <%# Low Rated %>
      <div class="stat bg-base-100 rounded-box shadow flex-shrink-0 w-[160px] md:w-auto min-h-[120px]">
        <div class="stat-figure text-error">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
          </svg>
        </div>
        <div class="stat-title text-sm">Low Rated</div>
        <div class="stat-value text-error text-2xl md:text-3xl"><%= @stats[:low_rated_unresolved] %></div>
        <div class="stat-desc text-xs">Unresolved</div>
      </div>

      <%# Resolved Today %>
      <div class="stat bg-base-100 rounded-box shadow flex-shrink-0 w-[160px] md:w-auto min-h-[120px]">
        <div class="stat-figure text-success">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-title text-sm">Resolved</div>
        <div class="stat-value text-success text-2xl md:text-3xl"><%= @stats[:resolved_today] %></div>
        <div class="stat-desc text-xs">Today</div>
      </div>

      <%# Average Rating %>
      <div class="stat bg-base-100 rounded-box shadow flex-shrink-0 w-[160px] md:w-auto min-h-[120px]">
        <div class="stat-figure text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
            <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="stat-title text-sm">Avg Rating</div>
        <div class="stat-value text-primary text-2xl md:text-3xl"><%= @stats[:average_rating] %></div>
        <div class="stat-desc text-xs">Out of 5</div>
      </div>
    </div>
  </div>

  <%# Mobile hint for scrolling stats %>
  <p class="text-xs text-base-content/60 text-center md:hidden -mt-3">
    Swipe to see all stats
  </p>

  <%# Active Users Section %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 md:gap-6">
    <%# Active Users Counter %>
    <div class="card bg-base-100 shadow" data-controller="auto-refresh" data-auto-refresh-interval-value="30000" data-auto-refresh-url-value="<%= admin_root_path %>">
      <div class="card-body p-4">
        <div class="flex items-center justify-between mb-3">
          <h2 class="text-sm font-semibold flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-success">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
            </svg>
            Active Now
          </h3>
          <span class="loading loading-spinner loading-xs opacity-0" data-auto-refresh-target="spinner"></span>
        </div>

        <div class="flex items-baseline gap-3">
          <div class="text-3xl font-bold text-success"><%= @active_users_count %></div>
          <div class="text-sm text-base-content/70">
            <% if @active_users_breakdown[:registered] > 0 %>
              <%= @active_users_breakdown[:registered] %> registered
            <% end %>
            <% if @active_users_breakdown[:anonymous] > 0 %>
              <% if @active_users_breakdown[:registered] > 0 %>+ <% end %>
              <%= @active_users_breakdown[:anonymous] %> guest<%= @active_users_breakdown[:anonymous] > 1 ? 's' : '' %>
            <% end %>
          </div>
        </div>

        <div class="text-xs text-base-content/60 mt-2">
          Last 15 minutes
        </div>
      </div>
    </div>

    <%# Activity by Form %>
    <div class="card bg-base-100 shadow lg:col-span-2">
      <div class="card-body p-4">
        <h3 class="text-sm font-semibold mb-3 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
          </svg>
          Most Active Forms
        </h3>

        <% if @activity_by_form.present? %>
          <div class="space-y-2">
            <% @activity_by_form.each do |form| %>
              <div class="flex items-center gap-3">
                <div class="flex-1 min-w-0">
                  <div class="text-xs font-medium truncate"><%= form[:form_code] %></div>
                  <div class="text-[10px] text-base-content/60 truncate"><%= truncate(form[:form_title], length: 30) %></div>
                </div>
                <div class="badge badge-sm badge-ghost"><%= form[:active_users] %></div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-xs text-base-content/60 text-center py-4">No active forms</p>
        <% end %>
      </div>
    </div>
  </div>

  <%# Recent Activity Feed %>
  <div class="card bg-base-100 shadow">
    <div class="card-body p-4">
      <h3 class="text-sm font-semibold mb-3 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
        </svg>
        Recent Activity
      </h3>

      <% if @recent_activity.present? %>
        <div class="space-y-2">
          <% @recent_activity.each do |activity| %>
            <div class="flex items-start gap-3 text-xs p-2 hover:bg-base-200 rounded transition-colors">
              <div class="flex-shrink-0 mt-0.5">
                <% case activity[:action] %>
                <% when "completed" %>
                  <span class="inline-block w-2 h-2 rounded-full bg-success"></span>
                <% when "downloaded" %>
                  <span class="inline-block w-2 h-2 rounded-full bg-info"></span>
                <% when "started" %>
                  <span class="inline-block w-2 h-2 rounded-full bg-warning"></span>
                <% else %>
                  <span class="inline-block w-2 h-2 rounded-full bg-base-content/30"></span>
                <% end %>
              </div>

              <div class="flex-1 min-w-0">
                <span class="font-medium">
                  <% if activity[:user][:type] == "registered" %>
                    <%= activity[:user][:name] %>
                  <% else %>
                    Guest <%= activity[:user][:session_id] %>
                  <% end %>
                </span>
                <span class="text-base-content/70">
                  <%= activity[:action] %>
                </span>
                <span class="font-medium"><%= activity[:form_code] %></span>
              </div>

              <div class="flex-shrink-0 text-[10px] text-base-content/60">
                <%= time_ago_in_words(activity[:timestamp]) %> ago
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-xs text-base-content/60 text-center py-4">No recent activity</p>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
    <%# Forms Needing Attention - Collapsible on mobile %>
    <details class="md:open group" open>
      <summary class="md:hidden flex items-center justify-between p-4 bg-base-100 shadow rounded-lg cursor-pointer min-h-[56px] list-none">
        <span class="flex items-center gap-2 font-semibold">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-warning">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
          </svg>
          Forms Needing Attention
          <% if @forms_needing_attention.any? %>
            <span class="badge badge-warning badge-sm"><%= @forms_needing_attention.load.size %></span>
          <% end %>
        </span>
        <svg class="w-5 h-5 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </summary>

      <div class="card bg-base-100 shadow mt-2 md:mt-0">
        <div class="card-body p-4 md:p-6">
          <h2 class="card-title hidden md:flex">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-warning">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
            </svg>
            Forms Needing Attention
          </h2>

          <% if @forms_needing_attention.any? %>
            <%# Mobile: Card layout; Desktop: Table %>
            <div class="md:hidden space-y-3">
              <% @forms_needing_attention.each do |form| %>
                <div class="flex items-center justify-between p-3 bg-base-200 rounded-lg">
                  <div class="min-w-0 flex-1">
                    <div class="font-medium"><%= form.code %></div>
                    <div class="text-sm opacity-60 truncate"><%= form.title %></div>
                  </div>
                  <div class="flex items-center gap-2 ml-2">
                    <span class="badge badge-warning"><%= form.feedback_count %></span>
                    <%= link_to "View", admin_feedbacks_path(form_id: form.id), class: "btn btn-ghost btn-sm min-h-[40px]" %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="hidden md:block overflow-x-auto">
              <table class="table table-zebra">
                <thead>
                  <tr>
                    <th>Form</th>
                    <th>Pending</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% @forms_needing_attention.each do |form| %>
                    <tr>
                      <td>
                        <div class="font-medium"><%= form.code %></div>
                        <div class="text-sm opacity-60"><%= truncate(form.title, length: 40) %></div>
                      </td>
                      <td>
                        <span class="badge badge-warning"><%= form.feedback_count %></span>
                      </td>
                      <td>
                        <%= link_to "View", admin_feedbacks_path(form_id: form.id), class: "btn btn-ghost btn-xs" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-6 md:py-8 text-base-content/60">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 md:w-12 md:h-12 mx-auto mb-2 opacity-50">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p>No forms need attention</p>
            </div>
          <% end %>
        </div>
      </div>
    </details>

    <%# Recent Feedback - Collapsible on mobile %>
    <details class="md:open group" open>
      <summary class="md:hidden flex items-center justify-between p-4 bg-base-100 shadow rounded-lg cursor-pointer min-h-[56px] list-none">
        <span class="flex items-center gap-2 font-semibold">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
          </svg>
          Recent Feedback
          <% if @recent_feedbacks.any? %>
            <span class="badge badge-ghost badge-sm"><%= @recent_feedbacks.count %></span>
          <% end %>
        </span>
        <svg class="w-5 h-5 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </summary>

      <div class="card bg-base-100 shadow mt-2 md:mt-0">
        <div class="card-body p-4 md:p-6">
          <div class="hidden md:flex items-center justify-between">
            <h2 class="card-title">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
              </svg>
              Recent Feedback
            </h2>
            <%= link_to "View All", admin_feedbacks_path, class: "btn btn-ghost btn-sm" %>
          </div>

          <%# Mobile: View All link at top %>
          <div class="flex justify-end md:hidden mb-2">
            <%= link_to "View All", admin_feedbacks_path, class: "btn btn-ghost btn-sm min-h-[40px]" %>
          </div>

          <% if @recent_feedbacks.any? %>
            <div class="space-y-3">
              <% @recent_feedbacks.each do |feedback| %>
                <%= render "admin/feedbacks/feedback_card", feedback: feedback %>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6 md:py-8 text-base-content/60">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 md:w-12 md:h-12 mx-auto mb-2 opacity-50">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
              </svg>
              <p>No feedback yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </details>
  </div>
</div>
