<% content_for :title, "Form Kits - Small Claims Bundles" %>

<div class="mb-6 md:mb-8">
  <div class="breadcrumbs text-sm mb-4">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Forms", forms_path %></li>
      <li>Form Kits</li>
    </ul>
  </div>

  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-base-content mb-2">
        Form Kits
      </h1>
      <p class="text-sm md:text-base text-base-content/70">
        Bundled forms for common small claims scenarios. Complete all forms in a kit for a streamlined filing process.
      </p>
    </div>

    <%= link_to form_dependencies_timeline_path, class: "btn btn-sm btn-ghost" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" %>
      </svg>
      View Timeline
    <% end %>
  </div>
</div>

<%# Filter Tabs %>
<div class="tabs tabs-boxed mb-6">
  <%= link_to "All Kits", form_dependencies_kits_path,
      class: "tab #{params[:role].blank? && params[:stage].blank? ? 'tab-active' : ''}" %>
  <%= link_to "Plaintiff", form_dependencies_kits_path(role: 'plaintiff'),
      class: "tab #{params[:role] == 'plaintiff' ? 'tab-active' : ''}" %>
  <%= link_to "Defendant", form_dependencies_kits_path(role: 'defendant'),
      class: "tab #{params[:role] == 'defendant' ? 'tab-active' : ''}" %>
  <%= link_to "Filing", form_dependencies_kits_path(stage: 'filing'),
      class: "tab #{params[:stage] == 'filing' ? 'tab-active' : ''}" %>
  <%= link_to "Judgment", form_dependencies_kits_path(stage: 'judgment'),
      class: "tab #{params[:stage] == 'judgment' ? 'tab-active' : ''}" %>
</div>

<%# Form Kits Grid %>
<% if @all_kits.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <% @all_kits.each do |kit| %>
      <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow" id="<%= kit[:key] %>">
        <div class="card-body">
          <%# Header %>
          <div class="flex items-start justify-between mb-3">
            <h2 class="card-title text-lg flex-1"><%= kit[:name] %></h2>
            <div class="flex flex-col gap-1 items-end">
              <span class="badge badge-<%= kit[:role] == 'plaintiff' ? 'primary' : kit[:role] == 'defendant' ? 'secondary' : 'accent' %> badge-sm">
                <%= kit[:role].titleize %>
              </span>
              <span class="badge badge-outline badge-sm">
                <%= kit[:stage].titleize %>
              </span>
            </div>
          </div>

          <%# Description %>
          <p class="text-sm text-base-content/70 mb-4"><%= kit[:description] %></p>

          <%# Forms in kit %>
          <div class="mb-4">
            <h3 class="text-xs font-semibold text-base-content/60 mb-2">
              Included Forms (<%= kit[:forms].count %>)
            </h3>
            <div class="space-y-2">
              <% kit[:forms].each do |form| %>
                <div class="flex items-center justify-between p-2 bg-base-200 rounded text-xs">
                  <div class="flex items-center gap-2">
                    <% if form[:required] %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                      </svg>
                    <% else %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    <% end %>
                    <span class="font-mono font-semibold"><%= form[:code] %></span>
                  </div>
                  <%= link_to "View", form_path(form[:code]), class: "link link-primary" if form[:exists] %>
                </div>
              <% end %>
            </div>
          </div>

          <%# Estimated time %>
          <div class="flex items-center gap-2 text-xs text-base-content/60 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Estimated time: <span class="font-semibold"><%= kit[:estimated_time] %></span></span>
          </div>

          <%# Completion progress (if user has submissions) %>
          <% if @kit_completions.present? && @kit_completions[kit[:key]].present? %>
            <% completion = @kit_completions[kit[:key]] %>
            <div class="mb-4">
              <div class="flex items-center justify-between mb-1 text-xs">
                <span class="text-base-content/60">Your Progress</span>
                <span class="font-semibold"><%= completion[:completed_count] %>/<%= completion[:total_count] %> forms</span>
              </div>
              <progress class="progress progress-success w-full" value="<%= completion[:completion_percentage] %>" max="100"></progress>
              <p class="text-[10px] text-base-content/60 mt-1">
                <%= completion[:completion_percentage].round %>% complete
              </p>
            </div>
          <% end %>

          <%# Actions %>
          <div class="card-actions justify-end mt-auto pt-4 border-t border-base-300">
            <% first_form = kit[:forms].first %>
            <% if first_form && first_form[:exists] %>
              <%= link_to "Start Kit", form_path(first_form[:code]), class: "btn btn-primary btn-sm" %>
            <% else %>
              <span class="text-xs text-base-content/60">Forms coming soon</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span>No form kits found matching your filter criteria.</span>
  </div>
<% end %>

<%# Info Section %>
<div class="alert bg-base-200 mt-8">
  <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
  </svg>
  <div class="flex-1">
    <h3 class="font-bold">What are Form Kits?</h3>
    <div class="text-sm mt-1">
      Form Kits are curated bundles of forms commonly filed together for specific scenarios. For example, the "Complete Filing Kit" includes all forms you need to start a small claims case as a plaintiff. This saves you time by ensuring you don't miss any required paperwork.
    </div>
  </div>
</div>

<%# Help Links %>
<div class="flex flex-wrap gap-4 justify-center mt-8">
  <%= link_to help_path, class: "btn btn-sm btn-ghost" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    Help Center
  <% end %>
  <%= link_to forms_path, class: "btn btn-sm btn-ghost" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>
    Browse All Forms
  <% end %>
</div>
