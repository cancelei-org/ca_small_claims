<% content_for :title, "Submissions - Admin" %>

<div class="space-y-6">
  <h1 class="sr-only">User Submissions Management</h1>
  <div class="flex items-center justify-between">
    <h2 class="text-2xl font-bold">User Submissions</h2>
    <div class="flex gap-2">
      <div class="badge badge-neutral gap-1">
        <%= @total_count %> total
      </div>
      <div class="badge badge-info gap-1">
        <%= @users_with_submissions %> users
      </div>
    </div>
  </div>

  <%# Search and Filters %>
  <div class="card bg-base-100 shadow">
    <div class="card-body p-4">
      <%= form_with url: admin_submissions_path, method: :get, data: { turbo_frame: "submissions-list" } do |f| %>
        <div class="flex flex-wrap gap-4 items-end">
          <div class="form-control w-full sm:w-64">
            <label class="label py-1" for="search">
              <span class="label-text text-xs">Search by Email or ID</span>
            </label>
            <%= f.text_field :search,
                             value: params[:search],
                             placeholder: "user@email.com or 123",
                             class: "input input-bordered input-sm w-full",
                             id: "search" %>
          </div>

          <div class="form-control w-full sm:w-auto">
            <label class="label py-1" for="form_id">
              <span class="label-text text-xs">Form</span>
            </label>
            <%= f.select :form_id,
                         options_from_collection_for_select(@forms, :id, :code, params[:form_id]),
                         { include_blank: "All Forms" },
                         class: "select select-bordered select-sm w-full",
                         id: "form_id" %>
          </div>

          <div class="form-control w-full sm:w-auto">
            <label class="label py-1" for="status">
              <span class="label-text text-xs">Status</span>
            </label>
            <%= f.select :status,
                         options_for_select([["Draft", "draft"], ["Completed", "completed"], ["Submitted", "submitted"]], params[:status]),
                         { include_blank: "All Statuses" },
                         class: "select select-bordered select-sm",
                         id: "status" %>
          </div>

          <div class="form-control w-full sm:w-auto">
            <label class="label py-1" for="user_type">
              <span class="label-text text-xs">User Type</span>
            </label>
            <%= f.select :user_type,
                         options_for_select([["Registered", "registered"], ["Anonymous", "anonymous"]], params[:user_type]),
                         { include_blank: "All Users" },
                         class: "select select-bordered select-sm",
                         id: "user_type" %>
          </div>

          <div class="flex gap-2">
            <%= f.submit "Filter", class: "btn btn-primary btn-sm" %>
            <%= link_to "Clear", admin_submissions_path, class: "btn btn-ghost btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%# Submissions List %>
  <%= turbo_frame_tag "submissions-list" do %>
    <div class="card bg-base-100 shadow">
      <div class="card-body p-0">
        <% if @submissions.any? %>
          <%# Mobile: Card layout %>
          <div class="md:hidden divide-y divide-base-200">
            <% @submissions.each do |submission| %>
              <div class="p-4 space-y-3" id="<%= dom_id(submission) %>-mobile">
                <div class="flex items-start justify-between gap-2">
                  <div class="min-w-0 flex-1">
                    <div class="font-medium"><%= submission.form_definition.code %></div>
                    <div class="text-sm opacity-60 truncate"><%= submission.form_definition.title %></div>
                  </div>
                  <% case submission.status %>
                  <% when "draft" %>
                    <span class="badge badge-warning badge-sm flex-shrink-0">Draft</span>
                  <% when "completed" %>
                    <span class="badge badge-info badge-sm flex-shrink-0">Completed</span>
                  <% when "submitted" %>
                    <span class="badge badge-success badge-sm flex-shrink-0">Submitted</span>
                  <% end %>
                </div>

                <div class="flex items-center gap-4 text-sm">
                  <div class="flex items-center gap-1">
                    <% if submission.user.present? %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 opacity-60">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                      </svg>
                      <span class="truncate max-w-[150px]"><%= submission.user.email %></span>
                    <% else %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 opacity-60">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
                      </svg>
                      <span class="italic opacity-60">Anonymous</span>
                    <% end %>
                  </div>
                </div>

                <div class="flex items-center justify-between text-sm">
                  <div class="flex items-center gap-2">
                    <div class="radial-progress text-primary text-xs" style="--value:<%= submission.completion_percentage %>; --size:2rem; --thickness: 3px;">
                      <%= submission.completion_percentage %>%
                    </div>
                    <span class="opacity-60"><%= time_ago_in_words(submission.updated_at) %> ago</span>
                  </div>

                  <%= link_to admin_submission_path(submission), class: "btn btn-ghost btn-sm min-h-[44px]" do %>
                    View
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                    </svg>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <%# Desktop: Table layout %>
          <div class="hidden md:block overflow-x-auto">
            <table class="table table-zebra">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Form</th>
                  <th>User</th>
                  <th>Status</th>
                  <th>Completion</th>
                  <th>Created</th>
                  <th>Updated</th>
                  <th class="text-right">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @submissions.each do |submission| %>
                  <tr id="<%= dom_id(submission) %>">
                    <td class="font-mono text-sm"><%= submission.id %></td>
                    <td>
                      <div class="font-medium"><%= submission.form_definition.code %></div>
                      <div class="text-sm opacity-60 truncate max-w-[200px]"><%= submission.form_definition.title %></div>
                    </td>
                    <td>
                      <% if submission.user.present? %>
                        <div class="flex items-center gap-2">
                          <div class="avatar placeholder">
                            <div class="bg-neutral text-neutral-content rounded-full w-8">
                              <span class="text-xs"><%= submission.user.display_name.first(2).upcase %></span>
                            </div>
                          </div>
                          <div>
                            <div class="font-medium text-sm"><%= submission.user.display_name %></div>
                            <div class="text-xs opacity-60"><%= submission.user.email %></div>
                          </div>
                        </div>
                      <% else %>
                        <div class="flex items-center gap-2 opacity-60">
                          <div class="avatar placeholder">
                            <div class="bg-base-300 text-base-content rounded-full w-8">
                              <span class="text-xs">?</span>
                            </div>
                          </div>
                          <span class="italic text-sm">Anonymous</span>
                        </div>
                      <% end %>
                    </td>
                    <td>
                      <% case submission.status %>
                      <% when "draft" %>
                        <span class="badge badge-warning">Draft</span>
                      <% when "completed" %>
                        <span class="badge badge-info">Completed</span>
                      <% when "submitted" %>
                        <span class="badge badge-success">Submitted</span>
                      <% end %>
                    </td>
                    <td>
                      <div class="flex items-center gap-2">
                        <progress class="progress progress-primary w-16" value="<%= submission.completion_percentage %>" max="100"></progress>
                        <span class="text-sm"><%= submission.completion_percentage %>%</span>
                      </div>
                    </td>
                    <td class="text-sm"><%= submission.created_at.strftime("%b %d, %Y") %></td>
                    <td class="text-sm"><%= time_ago_in_words(submission.updated_at) %> ago</td>
                    <td class="text-right">
                      <%= link_to admin_submission_path(submission), class: "btn btn-ghost btn-sm" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        View
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <% if @pagy && @pagy.pages > 1 %>
            <div class="p-4 border-t flex justify-center">
              <%== pagy_nav(@pagy) %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-12 text-base-content/60">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto mb-2 opacity-50">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
            </svg>
            <p class="font-medium">No submissions found</p>
            <p class="text-sm">Try adjusting your filters</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
