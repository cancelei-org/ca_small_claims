<% content_for :title, "Feedback ##{@feedback.id} - Admin" %>

<div class="space-y-6">
  <div class="flex items-center gap-4">
    <%= link_to admin_feedbacks_path, class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to Feedback
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Main Content %>
    <div class="lg:col-span-2 space-y-6">
      <%# Feedback Details %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h2 class="card-title mb-1"><%= @feedback.form_definition.code %></h2>
              <p class="text-base-content/70"><%= @feedback.form_definition.title %></p>
            </div>
            <% case @feedback.status %>
            <% when "pending" %>
              <span class="badge badge-warning">Pending</span>
            <% when "acknowledged" %>
              <span class="badge badge-info">Acknowledged</span>
            <% when "resolved" %>
              <span class="badge badge-success">Resolved</span>
            <% end %>
          </div>

          <%# Rating %>
          <div class="mb-4">
            <label class="text-sm font-medium text-base-content/70">Rating</label>
            <div class="flex items-center gap-1 mt-1">
              <% @feedback.rating.times do %>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-warning">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
              <% end %>
              <% (5 - @feedback.rating).times do %>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-base-300">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
              <% end %>
              <span class="ml-2 text-base-content/70"><%= @feedback.rating_label %></span>
            </div>
          </div>

          <%# Issues %>
          <div class="mb-4">
            <label class="text-sm font-medium text-base-content/70">Reported Issues</label>
            <div class="flex flex-wrap gap-2 mt-2">
              <% @feedback.issue_types.each do |type| %>
                <span class="badge badge-lg"><%= FormFeedback::ISSUE_TYPES[type] || type %></span>
              <% end %>
            </div>
          </div>

          <%# Comment %>
          <% if @feedback.comment.present? %>
            <div>
              <label class="text-sm font-medium text-base-content/70">Additional Comments</label>
              <div class="mt-2 p-4 bg-base-200 rounded-lg">
                <p class="whitespace-pre-wrap"><%= @feedback.comment %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%# Admin Notes %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="font-semibold mb-4">Admin Notes</h3>

          <%= form_with model: @feedback, url: admin_feedback_path(@feedback), method: :patch do |f| %>
            <div class="form-control mb-4">
              <%= f.text_area :admin_notes, rows: 4, class: "textarea textarea-bordered w-full", placeholder: "Add notes about this feedback..." %>
            </div>
            <div class="flex justify-end">
              <%= f.submit "Save Notes", class: "btn btn-primary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# Sidebar %>
    <div class="space-y-6">
      <%# Actions %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="font-semibold mb-4">Actions</h3>

          <div class="space-y-2">
            <% unless @feedback.resolved? %>
              <% if @feedback.pending? %>
                <%= button_to acknowledge_admin_feedback_path(@feedback),
                            method: :patch,
                            class: "btn btn-outline btn-info w-full gap-2" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  Mark as Acknowledged
                <% end %>
              <% end %>

              <%= button_to resolve_admin_feedback_path(@feedback),
                          method: :patch,
                          class: "btn btn-success w-full gap-2" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Mark as Resolved
              <% end %>
            <% else %>
              <div class="alert alert-success">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Resolved by <%= @feedback.resolved_by&.display_name || "Unknown" %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <%# Metadata %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="font-semibold mb-4">Details</h3>

          <dl class="space-y-3 text-sm">
            <div class="flex justify-between">
              <dt class="text-base-content/70">Submitted by</dt>
              <dd class="font-medium"><%= @feedback.submitted_by %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-base-content/70">Submitted</dt>
              <dd class="font-medium"><%= @feedback.created_at.strftime("%b %d, %Y at %l:%M %p") %></dd>
            </div>
            <% if @feedback.resolved? %>
              <div class="flex justify-between">
                <dt class="text-base-content/70">Resolved</dt>
                <dd class="font-medium"><%= @feedback.resolved_at&.strftime("%b %d, %Y at %l:%M %p") %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>

      <%# View Form %>
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <%= link_to form_path(@feedback.form_definition), class: "btn btn-outline w-full gap-2", target: "_blank" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
            View Form
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
