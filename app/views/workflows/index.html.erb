<% content_for :title, "#{t("workflows.title")} - CA Small Claims Court" %>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-base-content mb-2"><%= t("workflows.title") %></h1>
  <p class="text-base-content/70"><%= t("workflows.subtitle") %></p>
</div>

<% if @workflows.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @workflows.each do |workflow| %>
      <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow">
        <div class="card-body p-6">
          <div class="flex items-center mb-4">
            <div class="flex-shrink-0">
              <span class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-primary/10">
                <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
              </span>
            </div>
            <div class="ml-4">
              <h2 class="card-title text-base-content"><%= workflow.name %></h2>
              <% if workflow.category.present? %>
                <span class="text-sm text-base-content/60"><%= workflow.category.name %></span>
              <% end %>
            </div>
          </div>

          <% if workflow.description.present? %>
            <p class="text-base-content/70 text-sm mb-4"><%= workflow.description %></p>
          <% end %>

          <div class="flex items-center justify-between mt-auto">
            <div class="flex items-center text-sm text-base-content/60">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              <%= t("workflows.step_count", count: workflow.total_steps) %>
            </div>

            <%= link_to workflow_path(workflow), class: "btn btn-primary btn-sm gap-2" do %>
              <%= t("workflows.start_button") %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Forms in this workflow -->
        <div class="px-6 pb-6 pt-0">
          <div class="border-t border-base-200 pt-4">
            <p class="text-xs font-medium text-base-content/50 uppercase mb-2"><%= t("workflows.included_forms") %></p>
            <div class="flex flex-wrap gap-2">
              <% workflow.form_definitions.limit(4).each do |form| %>
                <span class="badge badge-ghost badge-sm">
                  <%= form.code %>
                </span>
              <% end %>
              <% if workflow.form_definitions.count > 4 %>
                <span class="badge badge-ghost badge-sm">
                  +<%= workflow.form_definitions.count - 4 %> <%= t("workflows.more_count") %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <%= render "shared/empty_state",
    icon: "clipboard",
    title: t("workflows.empty.title"),
    message: t("workflows.empty.message"),
    action_path: forms_path,
    action_text: t("workflows.empty.action") %>
<% end %>
